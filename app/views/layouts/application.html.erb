<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
    <%# 7.4.2 flash表示用  %>
      <% flash.each do |message_type, message|%>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}")%>
      <% end %>

      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
