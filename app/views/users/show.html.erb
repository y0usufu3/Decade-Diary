<%= provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
		<%# #list14.23 %>
		<section class="stats">
			<%= render "shared/stats" %>
		</section>
	</aside>
	<%# #dairy追加 %>

	<div class="col-md-8">
		<% if (@diary.nil? == false) %>
			<%= render "diary/show" %>
		<% end %>
	</div>
	<div class="col-md-8">
		<%= render "follow_form" if logged_in? %>
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>